@model Funcionario

@{
    ViewData["Title"] = "Cadastro de Funcionário";
}

<form asp-action="CadastroFuncionario" asp-controller="Home" method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                    <h3 class="subtitle-doc">
                        @ViewData["Title"]
                    </h3>
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <a asp-controller="Home" asp-action="Login" class="float-right btn btn-outline-primary mt-1">Entrar</a>
                                <h4 class="card-title mt-2">Cadastro</h4>
                            </header>
                            <article class="card-body">
                                @if (TempData["MSG_S"] != null)
                                {
                                    <p class="alert alert-success">@TempData["MSG_S"]</p>
                                }
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Id">Id</label>
                                        <input type="text" asp-for="Id" class="form-control" placeholder="">
                                        <span asp-validation-for="Id"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Nome">Nome</label>
                                        <input type="text" asp-for="Nome" class="form-control" placeholder="">
                                        <span asp-validation-for="Nome"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="CPF">CPF</label>
                                        <input type="text" asp-for="CPF" class="form-control" placeholder="999.999.999-99">
                                        <span asp-validation-for="CPF"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="DataNascimento">DataNascimento</label>
                                        <input type="text" asp-for="DataNascimento" class="form-control" placeholder="99/99/9999">
                                        <span asp-validation-for="DataNascimento"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Status">Status</label>
                                        <input type="text" asp-for="Status" class="form-control" placeholder="">
                                        <span asp-validation-for="Status"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Email">E-mail</label>
                                        <input type="email" asp-for="Email" class="form-control" placeholder="exemplo@email.com">
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group">
                                        <label asp-for="Senha">Criar senha</label>
                                        <input type="password" asp-for="Senha" class="form-control" placeholder="">
                                        <span asp-validation-for="Senha"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block"> Salvar </button>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <small class="text-muted">
                                        Ao clicar em "Salvar", você aceitará nossos
                                        <br />Termos de uso e Políticas de privacidade.
                                    </small>
                                </div>
                            </article>
                            <div class="border-top card-body text-center">
                                Já possui uma conta? <a asp-controller="Home" asp-action="Login">Entrar</a>
                            </div>
                        </div>

                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>