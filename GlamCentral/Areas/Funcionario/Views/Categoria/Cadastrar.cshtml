@model GlamCentral.Models.Categoria
@{
    ViewData["Title"] = "Cadastrar Categoria";
}
<div>
    <br />
    <br />
    <br />
    <h1 class="title-generic">@ViewData["Title"]</h1>

    <form method="post">
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" placeholder="Digite o nome da categoria">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Slug"></label>
            <input asp-for="Slug" class="form-control" placeholder="Digite o slug da categoria">
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoriaPaiID"></label>
            <select asp-for="CategoriaPaiID" class="form-control" asp-items="@ViewBag.Categorias">
                <option value="">Selecione ...</option>
            </select>
            <span asp-validation-for="CategoriaPaiID" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-blue">Salvar</button> <a asp-action="Index" class="btn btn-info">Voltar</a>
    </form>
</div>
